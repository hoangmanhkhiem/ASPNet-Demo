@model IEnumerable<Ictshop.Models.Hangsanxuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý hãng điện thoại</h2>

<p>
    @Html.ActionLink("Thêm mới hãng", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Mã hãng
        </th>
        <th> Tên hãng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Mahang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tenhang)
    </td>
    <td>
        <button class="btn btn-success">
            @Html.ActionLink("Sửa", "Edit", new { id = item.Mahang}, new { @style = "color:white;" })
        </button>
        <button class="btn btn-primary">
            @Html.ActionLink("Chi tiết", "Details", new { id = item.Mahang }, new { @style = "color:white;" })
        </button>
        <button class="btn btn-danger">
            @Html.ActionLink("Xóa", "Delete", new { id = item.Mahang }, new { @style = "color:white;" })
        </button>
    </td>
</tr>
}

</table>
